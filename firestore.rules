rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any user to create a document in the 'users' collection.
    // This is necessary for the signup process.
    match /users/{userId} {
      allow create: if request.auth != null;

      // Logged-in users can read their own profile,
      // and admins can read any profile.
      allow read, update: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
  }
}