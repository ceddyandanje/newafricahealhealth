
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin by checking their role in the users collection.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read/update any user. Users can only read/update their own document.
      allow read, update: if request.auth.uid == userId || isAdmin();
      // Admins can delete any user except themselves. Users cannot delete their own accounts through this rule.
      allow delete: if isAdmin() && request.auth.uid != userId;
      // Any authenticated user can create their own user document during signup.
      allow create: if request.auth.uid != null;
      
      // Rules for user subcollections (e.g., medicalProfile, availability, events, healthMetrics)
      match /{subcollection}/{docId} {
        // Users can manage their own subcollections. Admins can manage any user's subcollections.
        allow read, write: if request.auth.uid == userId || isAdmin();
      }
    }

    // Rules for collections managed by Admins
    match /products/{productId} {
      allow read: if true; // Everyone can read products
      allow write: if isAdmin(); // Only admins can create, update, delete products
    }
    
    match /blog/{postId} {
      allow read: if true; // Everyone can read blog posts
      allow write: if isAdmin(); // Only admins can create, update, delete posts
    }
    
    match /refillRequests/{requestId} {
      allow read, write: if isAdmin(); // Only admins can manage refill requests
    }

    match /logs/{logId} {
      allow read, write: if isAdmin(); // Only admins can read/write logs
    }
    
    match /roadmap/{taskId} {
      allow read, write: if isAdmin(); // Only admins can manage the roadmap
    }

    // Rules for notifications
    match /notifications/{notificationId} {
        // A user can read a notification if it's for them or for their role.
        allow read: if request.auth.uid == resource.data.recipientId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role + '_role' == resource.data.recipientId;
        // Anyone authenticated can create a notification (e.g., patient requests), and users can update their own (to mark as read).
        allow write: if request.auth.uid != null;
    }

    // Allow admins to access the test collection
    match /test-collection/{docId} {
        allow read, write: if isAdmin();
    }
    match /test-connection-collection/{docId} {
        allow read, write: if isAdmin();
    }
  }
}