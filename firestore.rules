rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public creation of consultation requests
    match /consultations/{consultationId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null; // Only authenticated users (e.g., admins) can manage
    }
    
    // By default, deny all reads and writes to all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
